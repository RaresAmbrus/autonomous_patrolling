<launch>

    <arg name="waypoints"/>
    <arg name="randomized" default="true"/>
    <arg name="n_it" default="-1"/>

     <include file="$(find ros_mary_tts)/launch/ros_mary.launch"/>
     
     <include file="$(find strandsbag)/launch/record.launch">
        <arg name="bag_folder" value="$(arg bag_folder)"/>
     </include>
     
     <node name="nav_monitor" pkg="nav_monitor" type="nav_monitor.py" output="screen"/>

    <node name="patroller" pkg="waypoint_patroller" type="long_term_patroller_with_logging.py" output="screen" args="$(arg waypoints) $(arg randomized) $(arg n_it)">
    </node>
</launch>
